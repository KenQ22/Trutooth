    "version": "0.2.0",
    "configurations": [
        {
            "name": "TruTooth API (Reload)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch_trutooth.py",
            "args": [
                "--mode",
                "api",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "TruTooth Web UI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch_trutooth.py",
            "args": [
                "--mode",
                "web"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "TruTooth API + Web",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/launch_trutooth.py",
            "args": [
                "--mode",
                "both",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "compounds": []
}