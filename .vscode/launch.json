    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "trutooth.api:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
        },
        {
            "name": "TruTooth Java",
            "type": "java",
            "request": "launch",
            "mainClass": "TruTooth",
            "projectName": "trutooth-app"
        }
    ],
    "compounds": [
        {
            "name": "Launch Full Application",
            "configurations": [
                "FastAPI Backend",
                "TruTooth Java"
            ]
        }
    ]
}